{
  "name": "code-reference-copier",
  "displayName": "Code Reference Copier",
  "description": "Copy file references with line ranges in standard CLI format. Auto-paste to terminal applications on Linux, macOS, and Windows. Perfect for AI CLI coders like Claude, Kiro, and Copilot.",
  "version": "1.1.11",
  "publisher": "jmedsan",
  "keywords": [
    "code",
    "reference",
    "copy",
    "clipboard",
    "line",
    "range",
    "file",
    "path",
    "terminal",
    "cli",
    "claude",
    "ai",
    "copilot",
    "kiro-cli",
    "cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jmedsan/code-reference-copier"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "license": "MIT",
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-reference-copier.sendReferenceToTerminal",
    "onCommand:code-reference-copier.sendReferenceWithTextToTerminal",
    "onCommand:code-reference-copier.copyReference",
    "onCommand:code-reference-copier.copyReferenceWithText"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-reference-copier.sendReferenceToTerminal",
        "title": "Send Code Reference to Terminal (Auto-paste)"
      },
      {
        "command": "code-reference-copier.sendReferenceWithTextToTerminal",
        "title": "Send Code Reference with Text to Terminal (Auto-paste)"
      },
      {
        "command": "code-reference-copier.copyReference",
        "title": "Copy Code Reference to Clipboard Only"
      },
      {
        "command": "code-reference-copier.copyReferenceWithText",
        "title": "Copy Code Reference with Text to Clipboard Only"
      }
    ],
    "keybindings": [
      {
        "command": "code-reference-copier.sendReferenceToTerminal",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorTextFocus"
      },
      {
        "command": "code-reference-copier.sendReferenceWithTextToTerminal",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      },
      {
        "command": "code-reference-copier.copyReference",
        "key": "ctrl+shift+alt+k",
        "mac": "cmd+shift+alt+k",
        "when": "editorTextFocus"
      },
      {
        "command": "code-reference-copier.copyReferenceWithText",
        "key": "ctrl+shift+alt+t",
        "mac": "cmd+shift+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Code Reference Copier",
      "properties": {
        "codeReferenceCopier.autoPasteApplications": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": ["copilot", "kiro-cli", "kiro-cli-chat"],
          "description": "List of terminal applications to auto-paste code references to (Linux, macOS, Windows). Examples: [\"claude\", \"kiro-cli\", \"copilot\", \"edit.exe\"]"
        },
        "codeReferenceCopier.templatePath": {
          "type": "string",
          "default": "{PATH} ",
          "description": "Template for file reference without line selection. Variables: {PATH}"
        },
        "codeReferenceCopier.templateSingleLine": {
          "type": "string",
          "default": "{PATH}:{LINE1} ",
          "description": "Template for single-line selection. Variables: {PATH}, {LINE1}"
        },
        "codeReferenceCopier.templateMultiLine": {
          "type": "string",
          "default": "{PATH}:{LINE1}-{LINE2} ",
          "description": "Template for multi-line selection. Variables: {PATH}, {LINE1}, {LINE2}"
        },
        "codeReferenceCopier.templateWithText": {
          "type": "string",
          "default": "\n\n{TEXT}\n\n",
          "description": "Template appended to base reference when copying with text. This is APPENDED to the standard reference format (not a replacement). Variable: {TEXT}"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "npm run compile && node ./out/test/runTest.js 2>/dev/null"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.3.4",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  }
}
